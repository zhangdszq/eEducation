<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.fragment.WhiteboardFragment">

    <com.herewhite.sdk.WhiteboardView
        android:id="@+id/white_board_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_tools"
        android:layout_width="@dimen/dp_44"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_radius_6_333333"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_tool_selecter"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/slt_bg_radius_4_565656_141414"
            android:src="@drawable/tool_select" />

        <ImageView
            android:id="@+id/ic_tool_pen"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/slt_bg_radius_4_565656_141414"
            android:src="@drawable/tool_pen" />

        <ImageView
            android:id="@+id/ic_tool_text"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/slt_bg_radius_4_565656_141414"
            android:src="@drawable/tool_text" />

        <ImageView
            android:id="@+id/ic_tool_eraser"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/slt_bg_radius_4_565656_141414"
            android:src="@drawable/tool_eraser" />

        <ImageView
            android:id="@+id/ic_tool_color"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/slt_bg_radius_4_565656_141414"
            android:src="@drawable/tool_color" />
    </LinearLayout>

    <io.agora.rtc.education.room.view.ColorSelectView
        android:id="@+id/color_select_view"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_129"
        android:layout_marginStart="@dimen/dp_6"
        android:elevation="@dimen/dp_6"
        app:cardCornerRadius="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="@id/layout_tools"
        app:layout_constraintStart_toEndOf="@id/layout_tools" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_hand_up"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_slt_hand_up" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:elevation="@dimen/dp_3"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_hand_up">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_first"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@drawable/icon_first" />

            <ImageView
                android:id="@+id/ic_previous"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@drawable/icon_prev" />

            <TextView
                android:id="@+id/tv_page"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_32"
                android:background="@drawable/btn_circle_f5f7f8"
                android:gravity="center"
                android:textColor="@color/gray_191919"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/ic_next"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@drawable/icon_next" />

            <ImageView
                android:id="@+id/ic_end"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_4"
                android:src="@drawable/icon_end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>